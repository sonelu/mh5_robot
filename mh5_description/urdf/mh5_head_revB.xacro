<?xml version="1.0" ?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

    <xacro:include filename="$(find mh5_description)/urdf/mh5_transmission.xacro"/>

    <xacro:macro name="mh5_head" params="parent">

        <joint name="head_y" type="revolute">
            <axis xyz="0 0 1"/>
            <parent link="${parent}"/>
            <child link="head_servo"/>
            <origin xyz="-0.007076 0 ${0.191046+0.019}" rpy="0 0 0"/>
            <limit lower="-${pi/2}" upper="${pi/2}" effort="1.0" velocity="${2*pi}"/>
        </joint>
        <xacro:insert_transmission name="head_y"/>

        <link name="head_servo">
            <visual>
                <origin rpy="0 ${pi/2} ${pi/2}" xyz="-0.012 0 0"/>
                <geometry>
                    <mesh filename="package://mh5_description/meshes/2xl430_1_idle.stl"/>
                </geometry>
                <xacro:material_black/>
            </visual>
            <collision>
                <origin rpy="0 ${pi/2} ${pi/2}" xyz="-0.012 0 0"/>
                <geometry>
                    <mesh filename="package://mh5_description/meshes/2xl430_1_idle.stl"/>
                </geometry>
            </collision>
            <inertial>
                <origin rpy="0 ${pi/2} ${pi/2}" xyz="-0.012 0 0"/>
                <mass value="0.098"/>
                <inertia
                    ixx="0.000026983"
                    iyy="0.000019139"
                    izz="0.000026983"
                    ixy="0"
                    ixz="0.000000654"
                    iyz="0.0" />
            </inertial>
        </link>

        <joint name="head_p" type="revolute">
            <axis xyz="0 -1 0"/>
            <parent link="head_servo"/>
            <child link="head_frame"/>
            <origin xyz="-0.024 0 0" rpy="0 0 0"/>
            <limit lower="-${pi/12}" upper="${pi/4}" effort="1.0" velocity="${2*pi}"/>
        </joint>
        <xacro:insert_transmission name="head_p"/>

        <link name="head_frame">
            <visual>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <geometry>
                    <mesh filename="package://mh5_description/meshes/head_revB.stl"/>
                </geometry>
                <xacro:material_ivory/>
            </visual>
            <collision>
                <geometry>
                    <mesh filename="package://mh5_description/meshes/head_revB.stl"/>
                </geometry>
            </collision>
            <inertial>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <mass value="0.088195"/>
                <inertia
                    ixx="0.000186546"
                    iyy="0.000155841"
                    izz="0.000212189"
                    ixy="0"
                    ixz="-0.000000841"
                    iyz="0.0" />
            </inertial>
        </link>

        <joint name="left_camera_fixed" type="fixed">
            <parent link="head_frame"/>
            <child link="left_camera"/>
            <origin xyz="0.06435 0.030 -0.009347" rpy="0 0 0"/>
        </joint>

        <link name="left_camera">
            <visual>
                <origin rpy="0 0 ${pi/2}" xyz="0 0 0"/>
                <geometry>
                    <mesh filename="package://mh5_description/meshes/camera.stl"/>
                </geometry>
                <xacro:material_black/>
            </visual>
            <collision>
                <origin rpy="0 0 ${pi/2}" xyz="0 0 0"/>
                <geometry>
                    <mesh filename="package://mh5_description/meshes/camera.stl"/>
                </geometry>
            </collision>
            <inertial>
                <origin rpy="0 0 ${pi/2}" xyz="0 0 0"/>
                <mass value="0.002396"/>
                <inertia
                    ixx="0.000000108"
                    iyy="0.000000143"
                    izz="0.000000094"
                    ixy="0"
                    ixz="0"
                    iyz="0" />
            </inertial>
        </link>

        <joint name="right_camera_fixed" type="fixed">
            <parent link="head_frame"/>
            <child link="right_camera"/>
            <origin xyz="0.06435 -0.030 -0.009347" rpy="0 0 0"/>
        </joint>

        <link name="right_camera">
            <visual>
                <origin rpy="0 0 ${pi/2}" xyz="0 0 0"/>
                <geometry>
                    <mesh filename="package://mh5_description/meshes/camera.stl"/>
                </geometry>
                <xacro:material_black/>
            </visual>
            <collision>
                <origin rpy="0 0 ${pi/2}" xyz="0 0 0"/>
                <geometry>
                    <mesh filename="package://mh5_description/meshes/camera.stl"/>
                </geometry>
            </collision>
            <inertial>
                <origin rpy="0 0 ${pi/2}" xyz="0 0 0"/>
                <mass value="0.002396"/>
                <inertia
                    ixx="0.000000108"
                    iyy="0.000000143"
                    izz="0.000000094"
                    ixy="0"
                    ixz="0"
                    iyz="0" />
            </inertial>
        </link>

    </xacro:macro>

</robot>