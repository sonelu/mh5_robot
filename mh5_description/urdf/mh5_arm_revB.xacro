<?xml version="1.0" ?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

    <xacro:macro name="mh5_arm" params="side parent">

        <xacro:property name="short_side" value="${side[0]}"/>
        <xacro:if value="${short_side == 'l'}">
            <xacro:property name="factor" value = "1.0"/>
        </xacro:if>
        <xacro:if value="${short_side == 'r'}">
            <xacro:property name="factor" value = "-1.0"/>
        </xacro:if>

        <xacro:property name="effort" value="1.0"/>
        <xacro:property name="velocity" value="${2*pi}"/>

        <joint name="${side}_shoulder_fixed" type="fixed">
            <parent link="${parent}"/>
            <child link="${side}_shoulder_servo"/>
            <origin xyz="-0.006 ${factor*0.048} 0.11875" rpy="${pi/2} 0 ${pi/2 + factor*pi/2}"/>
        </joint>

        <link name="${side}_shoulder_servo">
            <visual>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <geometry>
                    <mesh filename="package://mh5_description/meshes/xl430_no_idle.stl"/>
                </geometry>
                <xacro:material_black/>
            </visual>
            <collision>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <geometry>
                    <mesh filename="package://mh5_description/meshes/xl430_no_idle.stl"/>
                </geometry>
            </collision>
            <inertial>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <mass value="0.057"/>
                <inertia
                    ixx="0.000015234"
                    iyy="0.000008769"
                    izz="0.000013720"
                    ixy="0"
                    ixz="0"
                    iyz="-0.000000355" />
            </inertial>
        </link>

        <joint name="${short_side}_sho_p" type="revolute">
            <axis xyz="0 0 ${factor}"/>
            <parent link="${side}_shoulder_servo"/>
            <child link="${side}_shoulder_frame"/>
            <origin xyz="0 0 0.019" rpy="0 ${pi} ${pi/2 - factor*pi/2}"/>
            <limit lower="-${pi/2}" upper="${pi}" effort="${effort}" velocity="${velocity}"/>
        </joint>
        <xacro:insert_transmission name="${short_side}_sho_p"/>

        <link name="${side}_shoulder_frame">
            <visual>
                <origin rpy="0 0 ${-pi/2 + factor*pi/2}" xyz="0 ${-factor*0.016} -0.027"/>
                <geometry>
                    <mesh filename="package://mh5_description/meshes/frame01.stl"/>
                </geometry>
                <material name="ivory"/>
            </visual>
            <collision>
                <origin rpy="0 0 ${-pi/2 + factor*pi/2}" xyz="0 ${-factor*0.016} -0.027"/>
                <geometry>
                    <mesh filename="package://mh5_description/meshes/frame01.stl"/>
                </geometry>
            </collision>
            <inertial>
                <origin rpy="0 0 ${-pi/2 + factor*pi/2}" xyz="0 ${-factor*0.016} -0.027"/>
                <mass value="0.0084"/>
                <inertia
                    ixx="0.000003311"
                    iyy="0.000001685"
                    izz="0.000003607"
                    ixy="0"
                    ixz="-0.000000411"
                    iyz="0" />
            </inertial>
        </link>

        <joint name="${short_side}_sho_r" type="revolute">
            <axis xyz="0 0 1"/>
            <parent link="${side}_shoulder_frame"/>
            <child link="${side}_arm_servo"/>
            <origin xyz="0 ${-factor*0.016} -0.027" rpy="0 ${pi/2} ${pi/2 - factor*pi/2}"/>
            <limit lower="0" upper="${pi}" effort="${effort}" velocity="${velocity}"/>
        </joint>
        <xacro:insert_transmission name="${short_side}_sho_r"/>

        <link name="${side}_arm_servo">
            <visual>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <geometry>
                    <mesh filename="package://mh5_description/meshes/xl430_with_idle.stl"/>
                </geometry>
                <material name="black"/>
            </visual>
            <collision>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <geometry>
                    <mesh filename="package://mh5_description/meshes/xl430_with_idle.stl"/>
                </geometry>
            </collision>
            <inertial>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <mass value="0.057"/>
                <inertia
                    ixx="0.000015234"
                    iyy="0.000008769"
                    izz="0.000013720"
                    ixy="0"
                    ixz="0"
                    iyz="-0.000000355" />
            </inertial>
        </link>

        <joint name="${side}_arm_fixed" type="fixed">
            <parent link="${side}_arm_servo"/>
            <child link="${side}_arm_frame"/>
            <origin xyz="0 -0.03675 0" rpy="0 ${pi/2} 0"/>
        </joint>

        <link name="${side}_arm_frame">
            <visual>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <geometry>
                    <mesh filename="package://mh5_description/meshes/frame03_revB.stl"/>
                </geometry>
                <material name="ivory"/>
            </visual>
            <collision>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <geometry>
                    <mesh filename="package://mh5_description/meshes/frame03_revB.stl"/>
                </geometry>
            </collision>
            <inertial>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <mass value="0.0028"/>
                <inertia
                    ixx="0.000000349"
                    iyy="0.000000241"
                    izz="0.000000567"
                    ixy="0"
                    ixz="0"
                    iyz="0" />
            </inertial>
        </link>

        <joint name="${short_side}_elb_y" type="revolute">
            <axis xyz="-1 0 0"/>
            <parent link="${side}_arm_frame"/>
            <child link="${side}_elbow_servo"/>
            <origin xyz="0 -0.0213 0" rpy="0 0 ${-factor*pi/2}"/>
            <limit lower="${-pi/2}" upper="${pi/2}" effort="${effort}" velocity="${velocity}"/>
        </joint>
        <xacro:insert_transmission name="${short_side}_elb_y"/>

        <link name="${side}_elbow_servo">
            <visual>
                <origin rpy="0 ${pi/2} 0" xyz="0 0 0"/>
                <geometry>
                    <mesh filename="package://mh5_description/meshes/xl430_no_idle.stl"/>
                </geometry>
                <material name="black"/>
            </visual>
            <collision>
                <origin rpy="0 ${pi/2} 0" xyz="0 0 0"/>
                <geometry>
                    <mesh filename="package://mh5_description/meshes/xl430_no_idle.stl"/>
                </geometry>
            </collision>
            <inertial>
                <origin rpy="0 ${pi/2} 0" xyz="0 0 0"/>
                <mass value="0.057"/>
                <inertia
                    ixx="0.000015234"
                    iyy="0.000008769"
                    izz="0.000013720"
                    ixy="0"
                    ixz="0"
                    iyz="-0.000000355" />
            </inertial>
        </link>

        <joint name="${side}_lower_arm_fixed" type="fixed">
            <parent link="${side}_elbow_servo"/>
            <child link="${side}_lower_arm_frame"/>
            <origin xyz="0 -0.03925 0" rpy="${-pi/2} 0 0"/>
        </joint>

        <link name="${side}_lower_arm_frame">
            <visual>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <geometry>
                    <mesh filename="package://mh5_description/meshes/lower_arm.stl"/>
                </geometry>
                <material name="ivory"/>
            </visual>
            <collision>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <geometry>
                    <mesh filename="package://mh5_description/meshes/lower_arm.stl"/>
                </geometry>
            </collision>
            <inertial>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <mass value="0.0077"/>
                <inertia
                    ixx="0.000003238"
                    iyy="0.000001387"
                    izz="0.000002795"
                    ixy="0"
                    ixz="0.000000011"
                    iyz="0" />
            </inertial>
        </link>

        <joint name="${short_side}_elb_p" type="revolute">
            <axis xyz="0 ${factor} 0"/>
            <parent link="${side}_lower_arm_frame"/>
            <child link="${side}_lower_arm_servo"/>
            <origin xyz="0 0 -0.034" rpy="0 0 0"/>
            <limit lower="${-0.6*pi}" upper="${0.6*pi}" effort="${effort}" velocity="${velocity}"/>
        </joint>
        <xacro:insert_transmission name="${short_side}_elb_p"/>

        <link name="${side}_lower_arm_servo">
            <visual>
                <origin rpy="${pi/2} 0 0" xyz="0 0 0"/>
                <geometry>
                    <mesh filename="package://mh5_description/meshes/xl430_with_idle.stl"/>
                </geometry>
                <material name="black"/>
            </visual>
            <collision>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <geometry>
                    <mesh filename="package://mh5_description/meshes/xl430_with_idle.stl"/>
                </geometry>
            </collision>
            <inertial>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <mass value="0.057"/>
                <inertia
                    ixx="0.000015234"
                    iyy="0.000008769"
                    izz="0.000013720"
                    ixy="0"
                    ixz="0"
                    iyz="-0.000000355" />
            </inertial>
        </link>

        <joint name="${side}_hand_fixed" type="fixed">
            <parent link="${side}_lower_arm_servo"/>
            <child link="${side}_hand"/>
            <origin xyz="0 0 -0.03925" rpy="0 0 ${pi/2+factor*pi/2}"/>
        </joint> -->

        <xacro:if value="${short_side == 'l'}">
            <xacro:property name="hand_stl" value = "package://mh5_description/meshes/left_hand_revB.stl"/>
        </xacro:if>
        <xacro:if value="${short_side == 'r'}">
            <xacro:property name="hand_stl" value = "package://mh5_description/meshes/right_hand_revB.stl"/>
        </xacro:if>

        <link name="${side}_hand">
            <visual>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <geometry>
                    <mesh filename="${hand_stl}"/>
                </geometry>
                <material name="ivory"/>
            </visual>
            <collision>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <geometry>
                    <mesh filename="${hand_stl}"/>
                </geometry>
            </collision>
            <inertial>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <mass value="0.0068"/>
                <inertia
                    ixx="0.000001001"
                    iyy="0.000001219"
                    izz="0.000000366"
                    ixy="-0.000000052"
                    ixz="-0.000000019"
                    iyz="0.000000024" />
            </inertial>
        </link>

    </xacro:macro>

</robot>
