<?xml version="1.0" ?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

    <xacro:macro name="mh5_arm" params="side parent">

        <xacro:property name="short_side" value="${side[0]}"/>
        <xacro:if value="${short_side == 'l'}">
            <xacro:property name="factor" value = "1.0"/>
        </xacro:if>
        <xacro:if value="${short_side == 'r'}">
            <xacro:property name="factor" value = "-1.0"/>
        </xacro:if>        
        
        <link name="${side}_shoulder_servo">
            <visual>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <geometry>
                    <mesh filename="package://mh5_description/meshes/xl430_no_idle.stl"/>
                </geometry>
                <xacro:material_black/>
            </visual>
        </link>

        <joint name="${side}_shoulder_fixed" type="fixed">
            <parent link="${parent}"/>
            <child link="${side}_shoulder_servo"/>
            <origin xyz="-0.003 ${factor*0.048} 0.09175" rpy="${pi/2} 0 ${pi/2 + factor*pi/2}"/>
        </joint>

        <link name="${side}_shoulder_frame">
            <visual>
                <origin rpy="0 0 ${-pi/2 + factor*pi/2}" xyz="0 ${-factor*0.016} -0.027"/>
                <geometry>
                    <mesh filename="package://mh5_description/meshes/frame01.stl"/>
                </geometry>
                <material name="ivory"/>
            </visual>
        </link>

        <joint name="${short_side}_sho_p" type="revolute">
            <axis xyz="0 0 ${factor}"/>
            <parent link="${side}_shoulder_servo"/>
            <child link="${side}_shoulder_frame"/>
            <origin xyz="0 0 0.019" rpy="0 ${pi} ${pi/2 - factor*pi/2}"/>
            <limit lower="-3.1416" upper="3.1416" effort="1000" velocity="100"/>
        </joint>

        <link name="${side}_arm_servo">
            <visual>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <geometry>
                    <mesh filename="package://mh5_description/meshes/xl430_with_idle.stl"/>
                </geometry>
                <material name="black"/>
            </visual>
        </link>

        <joint name="${short_side}_sho_r" type="revolute">
            <axis xyz="0 0 1"/>
            <parent link="${side}_shoulder_frame"/>
            <child link="${side}_arm_servo"/>
            <origin xyz="0 ${-factor*0.016} -0.027" rpy="0 ${pi/2} ${pi/2 - factor*pi/2}"/>
            <limit lower="-3.1416" upper="3.1416" effort="1000" velocity="100"/>
        </joint>

        <link name="${side}_arm_frame">
            <visual>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <geometry>
                    <mesh filename="package://mh5_description/meshes/frame03.stl"/>
                </geometry>
                <material name="ivory"/>
            </visual>
        </link>

        <joint name="${side}_arm_fixed" type="fixed">
            <parent link="${side}_arm_servo"/>
            <child link="${side}_arm_frame"/>
            <origin xyz="0 -0.03675 0" rpy="0 ${pi/2} 0"/>
        </joint>

        <link name="${side}_elbow_servo">
            <visual>
                <origin rpy="0 0 0" xyz="0 0.012 0"/>
                <geometry>
                    <mesh filename="package://mh5_description/meshes/2xl430_1_idle.stl"/>
                </geometry>
                <material name="black"/>
            </visual>
        </link>

        <joint name="${short_side}_elb_y" type="revolute">
            <axis xyz="1 0 0"/>
            <parent link="${side}_arm_frame"/>
            <child link="${side}_elbow_servo"/>
            <origin xyz="0 -0.0213 0" rpy="0 0 ${factor*pi/2}"/>
            <limit lower="-3.1416" upper="3.1416" effort="1000" velocity="100"/>
        </joint>

        <link name="${side}_forearm">
            <visual>
                <origin rpy="${pi} 0 ${pi/2-factor*pi/2}" xyz="0 0 0"/>
                <geometry>
                    <mesh filename="package://mh5_description/meshes/frame04.stl"/>
                </geometry>
                <material name="ivory"/>
            </visual>
        </link>

        <joint name="${short_side}_elb_p" type="revolute">
            <axis xyz="${-factor} 0 0"/>
            <parent link="${side}_elbow_servo"/>
            <child link="${side}_forearm"/>
            <origin xyz="0 0.024 0" rpy="0 -${pi/2} ${pi/2}"/>
            <limit lower="-3.1416" upper="3.1416" effort="1000" velocity="100"/>
        </joint>

        <xacro:if value="${short_side == 'l'}">
            <xacro:property name="hand_stl" value = "package://mh5_description/meshes/left_hand.stl"/>
        </xacro:if>
        <xacro:if value="${short_side == 'r'}">
            <xacro:property name="hand_stl" value = "package://mh5_description/meshes/right_hand.stl"/>
        </xacro:if>

        <link name="${side}_hand">
            <visual>
                <origin rpy="0 0 ${-factor*pi/2}" xyz="-0.0195 ${factor*0.01254} -0.0042"/>
                <geometry>
                    <mesh filename="${hand_stl}"/>
                </geometry>
                <material name="ivory"/>
            </visual>
        </link>

        <joint name="${side}_hand_fixed" type="fixed">
            <parent link="${side}_forearm"/>
            <child link="${side}_hand"/>
            <origin xyz="0 0 -0.052" rpy="0 0 0"/>
        </joint>

    </xacro:macro>

</robot>