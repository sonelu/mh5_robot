<?xml version="1.0"?>
<launch>

  <arg name="model" default="$(find mh5_description)/urdf/mh5_robot_revB.xacro"/>
  <rosparam file="$(find mh5_description)/config/controllers.yml" command="load" />

  <param name="robot_description" command="$(find xacro)/xacro $(arg model)" />

  <include file="$(find gazebo_ros)/launch/empty_world.launch"/>

  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model"
        args="-param robot_description -urdf -model mh5_robot" />

  <node name="controller_spawner" pkg="controller_manager" type="spawner" args="upper_controller" />

</launch>